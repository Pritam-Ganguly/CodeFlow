<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, minimum-scale=1.0" />
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <title>@ViewData["Title"] - CodeFlow.Web</title>
    <script type="importmap"></script>
    <script src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CodeFlow.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/easymde/dist/easymde.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.11.1/styles/default.min.css">
    <link rel="apple-touch-icon" sizes="180x180" href="~/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon-16x16.png">
</head>
<body class="bg-light">
    <header class="so-header">
        <nav class="navbar navbar-expand-lg justify-content-between navbar-light bg-white border-bottom box-shadow mb-3" x-data="{ isOpen: false }">
            <div class="container-fluid">
                <a class="navbar-brand so-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fab fa-stack-overflow me-2"></i>CodeFlow
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="d-flex flex-column flex-lg-row align-items-end align-items-lg-center gap-2 w-100 w-lg-auto mt-2 mt-lg-0">
                        <form asp-action="Index" asp-controller="Home" method="get" class="d-flex my-2 my-lg-0 mx-auto" style="width: 100%; max-width: 600px;">
                            <div class="input-group so-search-group">
                                <input type="search"
                                       name="search"
                                       class="form-control so-search-input"
                                       placeholder="Search questions..."
                                       aria-label="Search"
                                       aria-describedby="search-icon" />
                                <button class="btn btn-outline-secondary ms-2 so-search-btn" type="submit" aria-label="Search">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </form>
                        <ul class="navbar-nav flex-row flex-wrap align-items-center gap-2 p-2">
                            @if (User.Identity!.IsAuthenticated)
                            {
                                <li>
                                    <div class="dropdown dropstart">
                                        <a class=" btn dropdown-toggle" id="notification_display" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="fa-regular fa-bell p-2"></i><span class="badge bg-danger" id="notification_count_badge"></span>
                                        </a>
                                            <ul id="notification_list" class="dropdown-menu" data-empty="1" aria-labelledby="notification_list">
                                                <li class="list-group-item dropdown-item">Loading Notifications</li>
                                            </ul>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <div class="d-flex align-items-center gap-2">
                                        <a asp-controller="Profile" asp-action="UserProfile" asp-route-id="@User.FindFirst(ClaimTypes.NameIdentifier)?.Value">
                                            <img id="ProfileImage" style="width: 30px; height: 30px"
                                                 src="@Url.Action("ProfileImage", "Profile", new { id = User.FindFirst(ClaimTypes.NameIdentifier)?.Value })"
                                                 class="rounded-circle" />
                                        </a>
                                        <span class="so-user-name">@User.Identity.Name</span>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                                        <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="so-login-btn" asp-controller="Account" asp-action="Register" asp-route-returnUrl="@Context.Request.Path">
                                        <i class="fas fa-user-plus me-1"></i>Register
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="so-signup-btn" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Context.Request.Path">
                                        <i class="fas fa-sign-in-alt me-1"></i>Login
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="so-container">
        <aside class="so-sidebar">
            <ul class="so-sidebar-nav">
                <li class="so-sidebar-item">
                    <a asp-action="Index" asp-controller="Home">
                        Home
                    </a>
                </li>
                <li class="so-sidebar-item">
                    <a asp-action="Dashboard" asp-controller="Moderation">
                        Dashboard
                    </a>
                </li>
            </ul>
        </aside>
        <main role="main" class="so-main-content">
            @RenderBody()
        </main>
        <aside class="so-right-sidebar">
            <div class="so-widget" id="HotQuestions"></div>
            <div aria-live="polite" aria-atomic="true" class="position-relative">
                <div id="toast-container" class="toast-container position-absolute top-0 end-0 p-3">
                </div>
            </div>
        </aside>
    </div>

    <footer class="so-footer">
        <div class="so-footer-container container">
            <div class="so-footer-nav">
                <div class="so-footer-column">
                    <div class="so-footer-logo">
                        <i class="fab fa-stack-overflow fa-2x"></i> 
                    </div>
                    <div class="so-footer-title">CodeFlow</div>
                </div>
                <div class="so-footer-column">
                    <div class="so-footer-title">Quick Nav</div>
                    <a href="#" class="so-footer-link">Questions</a>
                    <a href="/Moderation/Dashboard" class="so-footer-link">Dashboard</a>
                </div>
                <div class="so-footer-column">
                    <div class="so-footer-title">Created BY, PRITAM GANGULY</div>
                    <a href="https://www.linkedin.com/in/pritam-ganguly-34730b199/" class="so-footer-link">Linkedin</a>
                </div>
            </div>
            <div class="so-footer-copyright">
                &copy; 2026 CodeFlow. All rights reserved.
            </div>
        </div>
    </footer>
    
    <script>
        async function getHotQuestions() {
            var response = await fetch("/Home/GetHotQuestions", {
                       method: 'GET',
                       headers: {
                           'X-Requested-With': 'XMLHttpRequest'
                       }
            }).then(res => res.text()).catch(e => console.error(e));
            return response;
        }

        document.addEventListener('DOMContentLoaded', async () => {
            hljs.highlightAll();
            var hotQuestions = await getHotQuestions();
            var hotQuestionCard = document.getElementById("HotQuestions");
            var card = document.createElement('div');
            card.innerHTML = hotQuestions;
            hotQuestionCard.appendChild(card);
        })
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/easymde/dist/easymde.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.11.1/highlight.min.js"></script>
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/notification.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("Styles", required: false)
</body>
</html>
