@model ErrorViewModel
@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
            <!-- Error Illustration -->
            <div class="mb-4">
                @if (Model.StatusCode == 404)
                {
                    <div class="error-illustration text-muted mb-4" style="font-size: 8rem;">
                        <i class="fas fa-search"></i>
                    </div>
                }
                else if (Model.StatusCode == 403)
                {
                    <div class="error-illustration text-warning mb-4" style="font-size: 8rem;">
                        <i class="fas fa-lock"></i>
                    </div>
                }
                else if (Model.StatusCode == 500)
                {
                    <div class="error-illustration text-danger mb-4" style="font-size: 8rem;">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                }
                else
                {
                    <div class="error-illustration text-secondary mb-4" style="font-size: 8rem;">
                        <i class="fas fa-cogs"></i>
                    </div>
                }
            </div>

            <!-- Error Content -->
            <div class="error-content">
                <h1 class="display-4 fw-bold text-dark mb-3">@Model.StatusCode - @Model.Title</h1>

                <p class="lead text-muted mb-4">@Model.Description</p>

                <!-- Additional context for specific errors -->
                @if (Model.StatusCode == 404)
                {
                    <div class="alert alert-info mb-4">
                        <p class="mb-0">The page you were looking for might have been moved, deleted, or never existed.</p>
                    </div>
                }
                else if (Model.StatusCode == 403)
                {
                    <div class="alert alert-warning mb-4">
                        <p class="mb-0">If you believe this is an error, please contact the administrator.</p>
                    </div>
                }
                else if (Model.StatusCode >= 500)
                {
                    <div class="alert alert-danger mb-4">
                        <p class="mb-0">Our technical team has been notified and is working to resolve the issue.</p>
                    </div>
                }

                <!-- Request ID (for support) -->
                @if (Model.ShowRequestId)
                {
                    <div class="mb-4">
                        <small class="text-muted">
                            <strong>Reference ID:</strong>
                            <code class="bg-light px-2 py-1 rounded">@Model.RequestId</code>
                        </small>
                    </div>
                }

                <!-- Action Buttons -->
                <div class="d-flex flex-column flex-sm-row justify-content-center gap-3 mb-5">
                    <button onclick="history.back()" class="btn btn-outline-primary btn-lg">
                        <i class="fas fa-arrow-left me-2"></i>Go Back
                    </button>
                    <a href="/" class="btn btn-primary btn-lg">
                        <i class="fas fa-home me-2"></i>Home Page
                    </a>
                </div>  
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .error-illustration {
            opacity: 0.7;
            transition: opacity 0.3s ease;
        }

        .error-illustration:hover {
            opacity: 1;
        }

        .btn {
            min-width: 160px;
            transition: all 0.3s ease;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
        }

        .card {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            border-radius: 1rem;
        }
    </style>
}