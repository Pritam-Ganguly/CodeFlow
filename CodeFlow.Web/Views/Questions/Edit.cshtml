@model CodeFlow.core.Models.Question
@{
    ViewData["Title"] = "Edit Question";
}

<div class="container mt-4">
    <h1>Edit question</h1>
    <form asp-controller="Questions" asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="Title" class="control-lable"></label>
            <input asp-for="Title" class="form-control" placeholder="e.g., Why is the sky blue?" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Body" class="control-lable"></label>
            <textarea asp-for="Body" class="form-control" rows="10" placeholder="Describe your problem in detail..."></textarea>
            <span asp-validation-for="Body" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Ask Question" class="btn btn-primary" />
            <a asp-controller="Questions" asp-action="Details" asp-route-id ="@Model.Id" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
