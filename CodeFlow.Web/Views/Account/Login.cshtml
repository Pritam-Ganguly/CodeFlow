@model CodeFlow.Web.Models.LoginViewModel

@{
    ViewData["Title"] = "Log In";
    var returnUrl = ViewData["ReturnUrl"] ?? Url.Content("~/");
}

<div class="container mt-4">
    <div class="mb-4">
        <h1>Log In</h1>
    </div>
    <hr />
    <form asp-action="Login" method="post">
        <input type="hidden" name="returnUrl" value="@returnUrl"/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="form-group mb-3">
            <label asp-for="DisplayName"></label>
            <input asp-for="DisplayName" class="form-control"/>
            <span asp-validation-for="DisplayName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <div class="checkbox">
                <label asp-for="RememberMe">
                    <input asp-for="RememberMe"/>
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Log in</button>
        <a href="@returnUrl" class="btn btn-secondary">Cancel</a>
    </form>
    <div class="text-center mt-4 pt-4 border-top">
        <div class="fs-title mb-3">Don't have an account?</div>
        <div class="fs-body2 mb-4 text-muted">
            Join the CodeFlow community to ask questions, answer problems, and connect with developers.
        </div>
        <a asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]"
           class="w-100 btn btn-primary btn-lg mb-3 fs-body3 py-2">
            Sign up
        </a>
    </div>
</div>

@section Scripts {
@{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}


